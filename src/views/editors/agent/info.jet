                <div x-show="!isLoadingItems.delegates && (!availableRegistryItems[getKeeperTypeForTab('delegates')] || availableRegistryItems[getKeeperTypeForTab('delegates')].length === 0) && !loadError && !itemSearchQueries.delegates"
